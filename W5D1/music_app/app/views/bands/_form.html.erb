<% action_url = band.persisted? ? band_url(band) : bands_url %>
<% method = band.persisted? ? "patch" : "post" %>

<form action="<%= action_url %>" method="post">
  <input type="hidden" name="_method" value="<%= method %>">

  <%= auth_token_input %>

  <label>Band Name:
    <input type="text" name="band[name]" value="<%= band.name %>">
  </label>

  <br>

  <% submit_val = band.persisted? ? "Update" : "Create" %>

  <input type="submit" value="<%= submit_val %>">

</form>
