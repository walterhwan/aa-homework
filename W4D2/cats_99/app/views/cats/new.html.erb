
<h1>Add cat to 99cat</h1>

<form action="<%= cats_url %>" method="post">
  <label for="name">Name</label>
  <input id="name" type="text" name="cat[name]">

  <br>

  <label for="birth_date">Birth Date</label>
  <input id="birth_date" type="date" name="cat[birth_date]">

  <br>

  <label for="color">Color</label>
  <!-- black red green brown blue purple cyan gray yellow white -->
  <select name="cat[color]">
    <option disabled selected>--</option>
    <option value="black">Black</option>
    <option value="red">Red</option>
    <option value="green">Green</option>
    <option value="brown">Brown</option>
    <option value="white">White</option>
  </select>

  <br>

  <input type="radio" name="cat[sex]" value="M"> Male<br>
  <input type="radio" name="cat[sex]" value="F"> Female<br>

  <br>

  <label for="description">Description</label>
  <br>
  <textarea id='description' name="cat[description]" rows="8" cols="80"></textarea>

  <br>

  <input type="submit" value="Add cats to 99cats">
</form>
